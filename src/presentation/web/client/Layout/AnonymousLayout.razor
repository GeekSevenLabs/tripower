@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<TriUiUtilsProvider/>

<MudLayout>
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h5" Class="ml-3">TriPower</MudText>
        <MudSpacer />
        
        <MudButton 
            Color="Color.Inherit" Variant="Variant.Outlined" StartIcon="@Icons.Material.Filled.Login"
            Href="/account/login" Class="mr-4" Size="Size.Small">
            Sign In
        </MudButton>
        <MudButton 
            Color="Color.Inherit" Variant="Variant.Outlined" StartIcon="@Icons.Material.Filled.Create"
            Href="/account/register" Size="Size.Small">
            Sign Up
        </MudButton>
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>